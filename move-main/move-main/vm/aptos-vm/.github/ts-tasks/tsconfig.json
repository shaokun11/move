{
  "compilerOptions": {
    "strict": true,
    "outDir": "bin",
    "target": "ES2021",
    "module": "ES2022",
    "moduleResolution": "Node",
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "**/*.ts",
    "**/*.mts"
  ],
  "exclude": [
    "node_modules",
  ]
}